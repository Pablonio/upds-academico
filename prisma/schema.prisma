generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Carrera{
  id Int @id @default(autoincrement())
  //Datos
  nombre String @unique
  //Relacion con Usuario
  usuario Usuario[]
  //Una carrera puede tener varios Semestres
  semestre Semestre[]
}

model Semestre{
  id Int @id @default(autoincrement())
  //Datos
  nroSemestre Int
  //Relacion con Carrera
  idCarrera Int?
  carrera Carrera? @relation(fields: [idCarrera], references: [id])
  //Un semestre puede tener varios Materias
  materia Materia[]
}

model Profesion{
  id Int @id @default(autoincrement())
  //Datos
  nombre String @unique
  //Relacion con Usuario
  usuario Usuario[]
}

model Usuario {
  id    Int     @id @default(autoincrement())
  //Datos
  codigoUsuario String @unique
  nombre String
  apellidos String
  ci String @unique
  correo String @unique
  contrasena String
  fechaNacimiento DateTime
  rol String  @default("ESTUDIANTE")
  //Un usuario puede tener varias profesiones
  idProfesion Int?
  profesion Profesion? @relation(fields: [idProfesion], references: [id])
  //Un usuario puede tener varias carreras
  idCarrera Int?
  carrera Carrera? @relation(fields: [idCarrera], references: [id])
  //Un usuario puede tener varias materias
  registroMateria RegistroMateria[]

  solicitud Solicitud[]
}

model MateriasRequeridas{
  id Int @id @default(autoincrement())
  //Datos
  nombre String
  //Relacion con Materia
  idMateria Int
  materia Materia @relation(fields: [idMateria], references: [id])
}

model RegistroMateria{
  id Int @id @default(autoincrement())
  //Datos
  nombre String
  //Relacion con Materia
  idMateria Int
  materia Materia @relation(fields: [idMateria], references: [id])
  //Relacion con Aula
  idAula Int
  aula Aula @relation(fields: [idAula], references: [id])
  //Relacion con Usuario
  idUsuario Int
  usuario Usuario @relation(fields: [idUsuario], references: [id])
}


model Materia{
  id Int @id @default(autoincrement())
  //Datos
  codigoMateria String @unique
  nombre String @unique
  fechaInicioMateria DateTime
  fechaFinMateria DateTime

  //Una materia puede requerir varias materias requeridas
  materiasRequeridas MateriasRequeridas[]
  //Relacion con Usuario
  registroMateria RegistroMateria[]
  //Relacion con Semestre
  idSemestre Int?
  semestre Semestre? @relation(fields: [idSemestre], references: [id])
  //Relacion con Aula
  aula Aula[]

  solicitud Solicitud[]
}

model Aula{
  id Int @id @default(autoincrement())
  //Datos
  codigoAula String @unique
  numeroAula Int
  piso Int
  idTurnoManana Int?
  turnoManana TurnoManana? @relation(fields: [idTurnoManana], references: [id])
  idTurnoTarde Int?
  turnoTarde TurnoTarde? @relation(fields: [idTurnoTarde], references: [id])
  idTurnoNoche Int?
  turnoNoche TurnoNoche? @relation(fields: [idTurnoNoche], references: [id])

  //Un aula puede tener varias materias
  idMateria Int?
  materia Materia? @relation(fields: [idMateria], references: [id])
  //Un aula puede tener varias usuarios
  registroMateria RegistroMateria[]
}

model TurnoManana{
  id Int @id @default(autoincrement())
  horaIngreso String @default("08:00 - 11:00")
  aula Aula[]
}

model TurnoTarde{
  id Int @id @default(autoincrement())
  horaIngreso String @default("15:00 - 18:00")
  aula Aula[]
}

model TurnoNoche{
  id Int @id @default(autoincrement())
  horaIngreso String @default("19:00 - 22:00")
  aula Aula[]
}

model Solicitud{
  id Int @id @default(autoincrement())
  idUsuario Int?
  usuario Usuario? @relation(fields: [idUsuario], references: [id])
  idMateria Int?
  materia Materia? @relation(fields: [idMateria], references: [id])
  estado String
  fecha DateTime @default(now())
}